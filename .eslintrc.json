{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  },
  "plugins": [
    "import",
    "html"
  ],
  "settings": {
    "import/resolver": "webpack",
    "html/html-extensions": [".html", ".vue"]
  },
  "extends": ["eslint:recommended"]
}
